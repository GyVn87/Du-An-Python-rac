import random

# ChÃ o má»«ng ngÆ°á»i chÆ¡i
print('====================')
print('ChÃ o má»«ng Ä‘áº¿n trÃ² chÆ¡i KÃ©o, BÃºa, Bao!')
print('TrÃ² chÆ¡i sáº½ diá»…n ra trong 7 lÆ°á»£t. HÃ£y cá»‘ gáº¯ng Ä‘áº¡t Ä‘Æ°á»£c 3 láº§n tháº¯ng Ä‘á»ƒ cÃ³ cÆ¡ há»™i gacha Ä‘á»“!!!')
print('====================')

# CÃ¡c thÃ´ng tin cÆ¡ báº£n
nuoc_di: dict = {'kÃ©o':"âœ‚ï¸",'bÃºa':'ğŸ”¨','bao':'ğŸ“ƒ'}
nuoc_di_hop_le: list = list(nuoc_di.keys())
diem: int =0
so_lan_choi: int =1

# Hoáº¡t Ä‘á»™ng cá»§a trÃ² chÆ¡i
while True:

    # NÆ°á»›c Ä‘i cá»§a ngÆ°á»i chÆ¡i
    print(f"LÆ°á»£t thá»© {so_lan_choi}")
    nguoi_choi: str = input('KÃ©o, BÃºa, Bao! >>>>> ').lower()
    if nguoi_choi not in nuoc_di_hop_le:
        print("Báº¡n Ä‘Ã£ nháº­p sai, vui lÃ²ng nháº­p láº¡i.")
        continue
    print("=======")

    # NÆ°á»›c Ä‘i cá»§a mÃ¡y
    nguoi_may: str = random.choice(nuoc_di_hop_le)

    # In nÆ°á»›c Ä‘i cá»§a cáº£ hai
    print(f'Báº¡n: {nuoc_di[nguoi_choi]}')
    print(f'MÃ¡y: {nuoc_di[nguoi_may]}')

    # So sÃ¡nh nÆ°á»›c Ä‘i
    if nguoi_choi == nguoi_may:
        print('Cáº£ hai hoÃ !')
    elif nguoi_choi == 'kÃ©o' and nguoi_may == 'bao':
        print("Báº¡n Ä‘Ã£ tháº¯ng!!!")
        diem += 1
    elif nguoi_choi == 'bÃºa' and nguoi_may == 'kÃ©o':
        print("Báº¡n Ä‘Ã£ tháº¯ng!!!")
        diem += 1
    elif nguoi_choi == 'bao' and nguoi_may == 'bÃºa':
        print("Báº¡n Ä‘Ã£ tháº¯ng!!!")
        diem += 1
    else:
        print("Báº¡n Ä‘Ã£ thua...")

    # Kiá»ƒm tra ngÆ°á»i chÆ¡i Ä‘Ã£ Ä‘áº¡t 3 Ä‘iá»ƒm hoáº·c Ä‘Ã£ qua 7 lÆ°á»£t chÆ¡i, náº¿u khÃ´ng thÃ¬ báº¯t Ä‘áº§u lÆ°á»£t má»›i
    print('====================')
    so_lan_choi += 1
    if diem == 3:
        print("ChÃºc má»«ng báº¡n Ä‘Ã£ Ä‘áº¡t Ä‘Æ°á»£c 3 Ä‘iá»ƒm!!!")
        break
    if so_lan_choi == 8:
        print("ÄÃ£ háº¿t 7 lÆ°á»£t chÆ¡i, báº¡n Ä‘Ã£ khÃ´ng Ä‘áº¡t Ä‘Æ°á»£c 3 Ä‘iá»ƒm. ChÃºc báº¡n may máº¯n láº§n sau...")
        quit()

# Gacha time !!!
print('====================')
print('ChÃ o má»«ng báº¡n Ä‘áº¿n mÃ¡y gacha. Sau Ä‘Ã¢y lÃ  danh sÃ¡ch váº­t pháº©m vÃ  tá»‰ lá»‡:' )

# Táº¡o dictionary gá»“m váº­t pháº©m vÃ  tá»‰ lá»‡ vÃ  in ra cho ngÆ°á»i chÆ¡i
danh_sach: dict = {'Hoa ğŸŒ»': 24,
'Kem ğŸ¦': 15,
'Pizza ğŸ•': 12,
'Gáº¥u bÃ´ng ğŸ§¸': 10,
'Kem khá»•ng lá»“ ğŸ¨': 9,
'GiÃ y ğŸ‘Ÿ': 8,
'Xe mÃ´ tÃ´ ğŸ': 7,
'Iphone 17 ğŸ“±': 6,
'Kim cÆ°Æ¡ng ğŸ’': 5,
'Con mÃ¨o ğŸ±': 4}
for vat_pham, ti_le in danh_sach.items():
    print(vat_pham + f': {ti_le}%')
print("=======")

# Hoáº¡t Ä‘á»™ng cá»§a mÃ¡y gacha
bat_dau: str = input('Báº¡n Ä‘Ã£ sáºµn sÃ ng chÆ°a? Nháº­p báº¥t kÃ¬ kÃ­ tá»± nÃ o Ä‘á»ƒ báº¯t Ä‘áº§u quay: ')

#Chá»n váº­t pháº©m ngáº«u nhiÃªn theo tá»‰ lá»‡
vat_pham: list = list(danh_sach.keys())
ti_le: list = list(danh_sach.values())
quay_thuong: list = random.choices(vat_pham, weights = ti_le)

# In káº¿t quáº£ trÃºng thÆ°á»Ÿng
print(f'XIN CHÃšC Má»ªNG! Báº¡n trÃºng {quay_thuong[0]}!')